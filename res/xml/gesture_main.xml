<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen 
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:bliss="http://schemas.android.com/apk/res-auto">

	<!-- bliss Logo Header -->
    <Preference 
        android:key="bliss_logo"
        android:layout="@layout/gestures_top" />

    <Preference
        android:title="@string/carbon_gesture_preference_title"
        android:summary="@string/carbon_gestures_summary"
        android:icon="@drawable/ic_gestures"
        android:fragment="com.blissroms.blissify.fragments.gestures.CarbonGesturesSettings" />

    <!-- PA Pie -->
    <Preference
        android:key="pa_pie_control" 
        android:title="@string/pa_pie_control_title" 
        android:summary="@string/pa_pie_control_summary"
        android:icon="@drawable/ic_gestures"
        android:fragment="com.blissroms.blissify.fragments.gestures.PieSettings" />

    <Preference
        android:key="app_circle_bar"
        android:title="@string/app_circle_bar_title"
        android:summary="@string/app_circle_bar_summary"
        android:icon="@drawable/ic_gestures"
        android:fragment="com.blissroms.blissify.fragments.gestures.AppCircleBar" />

    <Preference
        android:title="@string/doubletap_gestures_title"
        android:summary="@string/doubletap_gestures_summary"
        android:icon="@drawable/ic_gestures"
        android:fragment="com.blissroms.blissify.fragments.gestures.DoubletapSettings" />

</PreferenceScreen>
